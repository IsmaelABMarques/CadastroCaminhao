@model CadastroCaminhao.Models.Model.CadastroCaminhaoModel

@{
    ViewData["Title"] = "Editar Caminhão";
}

<h1>Caminhão</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Caminhao.Id" />
            <div class="form-group">
                <label asp-for="Caminhao.AnoFabricacao" class="control-label"></label>
                <input asp-for="Caminhao.AnoFabricacao" class="form-control" />
                <span asp-validation-for="Caminhao.AnoFabricacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Caminhao.AnoModelo" class="control-label"></label>
                <input asp-for="Caminhao.AnoModelo" class="form-control" />
                <span asp-validation-for="Caminhao.AnoModelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Caminhao.Modelo" class="control-label"></label>
                <select asp-for="Caminhao.ModeloId" asp-items="@Model.Modelos" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
